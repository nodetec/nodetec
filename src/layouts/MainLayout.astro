---
import "@fontsource/poppins";
import HeadCommon from "../components/HeadCommon.astro";
import HeadSEO from "../components/HeadSEO.astro";
import { SITE } from "../settings";

const { label, headings, ...data } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html dir={"ltr"} lang={"en"} class="initial">
  <head>
    <HeadCommon />
    <HeadSEO {...data} canonicalUrl={canonicalURL} label={label} />
    <title>
      {`${label} âš¡ ${SITE.title}`}
    </title>
  </head>

  <body
    class="bg-slate-50 text-slate-700 antialiased dark:bg-slate-900 dark:text-slate-300"
  >
    <slot />
    <style is:global>
      @media (prefers-reduced-motion: no-preference) {
        :root {
          scroll-behavior: smooth;
        }
      }
    </style>
  </body>
</html>
